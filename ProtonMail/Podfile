platform :ios, '8.0'

inhibit_all_warnings!

link_with 'ProtonMail', 'ProtonMailTests'
pod 'AFNetworking'
pod 'Groot', :git => 'https://github.com/zhj4478/Groot.git'
pod 'MBProgressHUD'
pod 'NSDate+Helper'
pod 'OpenPGP', :path => '../OpenPGP'
pod 'ZSSRichTextEditor', :path => '../ZSSRichTextEditor'
pod 'UICKeyChainStore'
pod 'SplunkMint-iOS'
pod 'SWRevealViewController', '2.3.0'
pod 'Masonry', '0.6.0'
pod 'RHAddressBook', '1.1.1'
pod 'UIColor+Hex'
pod 'FSSyncSpinner'

post_install do | installer |
    require 'fileutils'
    FileUtils.cp_r('Pods/Target Support Files/Pods/Pods-Acknowledgements.plist', 'ProtonMail/Settings.bundle/Acknowledgements.plist', :remove_destination => true)
end
