platform :ios, '8.0'

inhibit_all_warnings!

link_with 'ProtonMail', 'ProtonMailTests'
pod 'AFNetworking'
pod 'MBProgressHUD'
pod 'OpenSSL-Universal', :podspec => 'https://raw.github.com/krzyzanowskim/OpenSSL/master/OpenSSL-Universal.podspec'
pod 'UICKeyChainStore'
pod 'UNNetPGP', :podspec => 'https://raw.github.com/upnext/unnetpgp/master/UNNetPGP.podspec'
pod 'SWRevealViewController', '2.3.0'
pod 'Masonry', '0.6.0'

post_install do | installer |
    require 'fileutils'
    FileUtils.cp_r('Pods/Target Support Files/Pods/Pods-Acknowledgements.plist', 'ProtonMail/Settings.bundle/Acknowledgements.plist', :remove_destination => true)
end
